<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="roundedImageViewRounded"
        parent="">
        <item name="cornerSize">50%</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="AnimalCardRoundedDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_animal_card</item>
    </style>

    <style name="Widget.App.Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="android:textAppearance">@style/TextAppearance.App.Tooltip</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
    </style>

    <style name="TextAppearance.App.Tooltip" parent="TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="Widget.App.ProgressDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:windowBackground">@drawable/bg_animal_card</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:windowBackground">@drawable/bg_animal_card</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="myCustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

</resources>