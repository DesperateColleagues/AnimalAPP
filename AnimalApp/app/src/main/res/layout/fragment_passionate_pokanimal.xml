<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/textViewShadowId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="64sp"
            android:text="Pokanimal"
            android:textAlignment="center"
            android:fontFamily="@font/pokefont"
            android:textColor="@color/poke_blue" />

        <TextView
            android:id="@+id/textViewId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="64sp"
            android:text="Pokanimal"
            android:textAlignment="center"
            android:fontFamily="@font/pokefont"
            android:textColor="@color/poke_yellow" />
    </FrameLayout>

    <Button
        android:id="@+id/btnAddPokeLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        style="?android:attr/buttonBarButtonStyle"
        android:text="@string/aggiungi_pokelink"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPokemon"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>