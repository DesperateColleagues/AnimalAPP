<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgBackbench"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                tools:srcCompat="@tools:sample/avatars"/>

            <Button
                android:id="@+id/btnAddBackBenchImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                style="?android:attr/buttonBarButtonStyle"
                android:text="Inserisci o modifica immagine stallo"/>

            <TextView
                android:text="Descrizione stallo"
                android:gravity="center"
                android:textColor="?attr/colorOnSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtBackbenchDescription"
                android:layout_margin="10dp"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="16sp"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnAddBackBenchDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                style="?android:attr/buttonBarButtonStyle"
                android:text="Inserisci o modifica descrizione stallo"/>

        </LinearLayout>

    </ScrollView>




</LinearLayout>