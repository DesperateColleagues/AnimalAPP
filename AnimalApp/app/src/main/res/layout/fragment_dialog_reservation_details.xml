<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lblReservationAnimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="?attr/colorOnSecondary"
                android:text="@string/dettagli_animale"
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/txtReservationAnimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="?attr/colorOnSecondary"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lblReservationDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="?attr/colorOnSecondary"
                android:text="@string/dettagli_data"
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/txtReservationDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="?attr/colorOnSecondary"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lblReservationVeterinarian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="?attr/colorOnSecondary"
                android:text="@string/dettagli_veterinario"
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/txtReservationVeterinarian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="?attr/colorOnSecondary"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>