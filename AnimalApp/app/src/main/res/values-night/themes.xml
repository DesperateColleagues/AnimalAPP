<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AnimalApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_main</item>
        <item name="colorPrimaryVariant">@color/dark_variation</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>

        <!-- Color the action bar with the primary color-->
        <item name="actionBarStyle">@style/Widget.MaterialComponents.ActionBar.Primary</item>

        <!-- Customize your theme here. -->
        <item name="android:editTextColor">@color/dark_main</item>
    </style>
</resources>