<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AnimalApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">



        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>

        <!-- Color the action bar with the primary color-->
        <item name="actionBarStyle">@style/Widget.MaterialComponents.ActionBar.Primary</item>

        <!-- Color definitions: primary, secondary and tertiary color-->
        <item name="colorPrimary">@color/dark_main</item>
        <item name="colorPrimaryVariant">@color/dark_variation</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/dark_accent</item>
        <item name="android:colorSecondary">@color/dark_accent</item>

        <item name="colorTertiary">@color/cardview_dark_background</item>
        <item name="colorOnTertiary">@color/white</item>
    </style>
</resources>